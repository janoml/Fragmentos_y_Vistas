<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="cl.sawp.fragmentosdinmicos.MainActivity">

        <Button
            android:id="@+id/buttonFragmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mostrar_fragmento"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:id="@+id/flFragmento"
            android:layout_below="@id/buttonFragmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flCategoriaEmail"
            android:layout_width="200dp"

            android:layout_below="@id/flFragmento"
            android:layout_height="wrap_content">
            </FrameLayout>


</RelativeLayout>
