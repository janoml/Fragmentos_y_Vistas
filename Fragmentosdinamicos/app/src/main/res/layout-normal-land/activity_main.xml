<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="cl.sawp.fragmentosdinmicos.MainActivity">
    <FrameLayout
        android:id="@+id/flCategoriaEmail"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#4545"
       android:layout_margin="8dp">

    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonFragmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mostrar_fragmento"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <FrameLayout
            android:id="@+id/flFragmento"
            android:layout_below="@id/buttonFragmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4545"
            android:layout_margin="4dp">

        </FrameLayout>


    </RelativeLayout>


</LinearLayout>
